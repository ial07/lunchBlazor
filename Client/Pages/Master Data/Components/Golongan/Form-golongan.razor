@inject GolonganService GolonganService
@inject NavigationManager NavigationManager


<div class="modal fade" id="formGolongan" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <EditForm Model="formData" OnSubmit="@(()=>OnFormSubmit(formData))">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">
                        @if (Id == null)
                        {
                            <text>Create Golongan</text>
                        }
                        else
                        {
                            <text>Update Golongan</text>
                        }
                    </h1>

                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="form-label">Golongan Name</label>
                        <InputText @bind-Value="@formData.Name" class="form-control" />
                        <ValidationMessage For="@(()=>formData.Name)" />
                    </div>
                    @* <div class="form-check form-switch col-1">
                    <InputCheckbox class="form-check-input" type="checkbox" role="switch"
                    id="flexSwitchCheckChecked" @bind-Value="formData.IsActive" />
                    <label class="form-check-label" for="flexSwitchCheckChecked">Active</label>
                    </div> *@

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"
                        id="closeButtonGolongan">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
                <DataAnnotationsValidator />
            </div>
        </div>
    </EditForm>
</div>


@code {
    [Parameter]
    public Func<Golongan, Task> OnFormSubmit { get; set; }

    [Parameter]
    public string? Id { get; set; }
    [Parameter]
    public Golongan formData { get; set; } = new Golongan();


}