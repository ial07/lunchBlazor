<div class="tooltip-wrapper">

    <span id="spanText">@((MarkupString)Text)</span>

    @ChildContent

</div>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string Text { get; set; }
}

<style>
    .tooltip-wrapper {
        position: relative;
        display: inline-block;
    }

    #spanText {
        visibility: hidden;
        position: absolute;
        left: 80%;
        /* Change to right: 100%; */
        margin-left: 10px;
        /* Add some margin for spacing */
        background-color: #363636;
        color: #fff;
        text-align: center;
        padding: 5px 10px;
        border-radius: 6px;
        z-index: 1;
    }

    #spanText::before {
        /* Change to ::before for the arrow */
        content: "";
        position: absolute;
        top: 50%;
        left: -9px;
        /* Adjust to move the arrow to the left */
        transform: translateY(-50%);
        border-color: transparent #363636 transparent transparent;
        /* Change arrow color and direction */
        border-style: solid;
        border-width: 5px;
        z-index: 2;
        /* Ensure arrow is above the tooltip background */
    }

    .tooltip-wrapper:hover #spanText {
        visibility: visible;
    }
</style>