{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Blazor Server Debug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Server/bin/Debug/net6.0/lunchBlazor.Server.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "pipeTransport": {
                "pipeProgram": "C:\\Program Files\\dotnet\\dotnet.exe",
                "pipeArgs": [
                    "exec",
                    "${workspaceFolder}/Server/bin/Debug/net6.0/lunchBlazor.Server.dll"
                ],
                "quoteArgs": false,
                "debuggerPath": "C:\\Program Files\\dotnet\\sdk\\6.0.408\\"
            },
            "logging": {
                "moduleLoad": false,
                "exception": {
                    "excludePatterns": [
                        ".*UnauthorizedAccessException",
                        ".*NotSupportedException",
                        ".*FileNotFoundException",
                        ".*InvalidOperationException",
                        ".*ObjectDisposedException",
                        "^System\\.InvalidCastException"
                    ]
                }
            },
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
}