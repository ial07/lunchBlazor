@page "/pengajuan-mpp"
@inject NavigationManager Navigation
@inject MppFormService MppFormService
@inject SweetAlertService Swal

<PageTitle>Pengajuan MPP</PageTitle>


<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center
                    justify-content-between">
            <h4 class="mb-sm-0 font-size-24">Man Power Planning</h4>
            <div class="d-flex align-items-center">
                <div class="d-flex align-items-center">
                    <i class="bi bi-list-task mx-1 font-size-18 text-primary"
                        style="-webkit-text-stroke-width: 1px;"></i>
                    <div class="">
                        List View
                    </div>
                </div>
                <div class="d-flex mx-5">
                    <i class="bi bi-caret-left-fill text-primary"></i>
                    <div class="mx-3">2022</div>
                    <i class="bi bi-caret-right-fill text-primary"></i>
                </div>
                <div class="dropdown">
                    <button class="btn btn-info
        dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false"
                        disabled="@isLoading">
                        @if (isLoading)
                        {
                            <i class="fa-solid fa-spinner fa-spin-pulse"></i>
                        }
                        else
                        {
                            <i class="bi bi-plus-square-fill mx-1"></i>
                            <text>MPP Baru</text>
                        }
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" @onclick="HandleButtonClickAddA1">MPP A1</a>
                        <a class="dropdown-item" @onclick="HandleButtonClickAddB1">MPP B1</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- end page title -->


<div class="row">
    <div class="col-lg-4 col-md-6 col-12">
        <CardPlan labelCard="Dilanjutkan ke Sect. OPCC" />
    </div>
    <div class="col-lg-4 col-md-6 col-12">
        <CardPlan labelCard="Disimpan Sebagai Draft" iconCardHeader="bi-pencil-square" />
    </div>
    <div class="col-lg-4 col-md-6 col-12">
        <CardPlan labelCard="Pengajuan MPP Ditolak" iconCardHeader="bi-x-circle" />
    </div>
</div>
<!-- end row -->

@code {
    [CascadingParameter]
    public AppState ApplicationState { get; set; }

    private bool isLoading = false;
    private async Task HandleButtonClickAddA1()
    {
        isLoading = true;
        if (ApplicationState.MppForm == null)
        {
            ApplicationState.MppForm = new MppForm();
        }

        var result = await MppFormService.CreateMppFormA1();
        if (Guid.TryParse(result, out _))
        {
            ApplicationState.MppForm.Id = new Guid(result);
            isLoading = false;
            Navigation.NavigateTo("/pengajuan-mpp/input-mpp/A1");
        }
        else if (result == "Unauthorized")
        {
            await Swal.FireAsync(new SweetAlertOptions
                {
                    Title = "Session Anda habis, harap login kembali!",
                    Icon = "error",
                });
            Navigation.NavigateTo("/login");
        }
        isLoading = false;
    }
    private async Task HandleButtonClickAddB1()
    {
        isLoading = true;
        if (ApplicationState.MppForm == null)
        {
            ApplicationState.MppForm = new MppForm();
        }

        Navigation.NavigateTo("/pengajuan-mpp/input-mpp/B1");
        var result = await MppFormService.CreateMppFormA1();
        if (Guid.TryParse(result, out _))
        {
            ApplicationState.MppForm.Id = new Guid(result);
            isLoading = false;
            Navigation.NavigateTo("/pengajuan-mpp/input-mpp/B1");
        }
        else if (result == "Unauthorized")
        {
            await Swal.FireAsync(new SweetAlertOptions
                {
                    Title = "Session Anda habis, harap login kembali!",
                    Icon = "error",
                });
            Navigation.NavigateTo("/login");
        }
        isLoading = false;
    }

}
