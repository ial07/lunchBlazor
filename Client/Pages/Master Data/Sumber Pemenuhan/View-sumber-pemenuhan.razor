@inject SumberPemenuhanService SumberPemenuhanService
@inject IModalService modal
@inject SweetAlertService Swal
@inject IJSRuntime JSRuntime

@page "/master-data/sumber-pemenuhan"

<PageTitle>Sumber Pemenuhan</PageTitle>

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center
                    justify-content-between">
            <h4 class="mb-sm-0 font-size-24">Sumber Pemenuhan</h4>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 mt-4">
        <div class="d-flex justify-content-end">
            <Button type="button" Label="Tambah" bold data-bs-toggle="modal" data-bs-target="#formSumberPemenuhan"
                onClick="HandleAddSumberPemenuhan" />
        </div>
        <div>
            <Table table=@table HandleClickPrevious=" Previous" HandleClickNext="Next"
                HandlePageSizeChange="HandlePageSizeChange" mySieveModel="mySieveModel"
                totalCountData="SumberPemenuhanService.SumberPemenuhans.totalCountData"
                HandleEditBtn="HandleEditBtnSumberPemenuhan" IsModalEdit modalEditNameId="formSumberPemenuhan"
                HandleDeleteBtn="HandleDeleteSumberPemenuhan" />
        </div>
    </div>
</div>

<Form_sumber_pemenuhan Id="@ApplicationState.Id" formData="@formData" OnFormSubmit="HandleFormSubmission" />

@code {

    private SumberPemenuhan formData = new SumberPemenuhan();
    private async void HandleEditBtnSumberPemenuhan(string id)
    {
        ApplicationState.Id = id;
        if (ApplicationState.Id is not null)
        {
            mySieveModel.Filters = $"Id=={ApplicationState.Id}";
            await SumberPemenuhanService.GetSumberPemenuhanById(mySieveModel);
            formData = SumberPemenuhanService.SumberPemenuhan;
        }
        StateHasChanged();
    }

    private void HandleAddSumberPemenuhan()
    {
        ApplicationState.Id = null;
        formData = new SumberPemenuhan();
        StateHasChanged();
    }

    [CascadingParameter]
    public AppState ApplicationState { get; set; }
    private SieveModel mySieveModel = new SieveModel
        {
            Page = 1,
            PageSize = 5,
        };
    private TableModelViewModel table = new TableModelViewModel();
    private List<SumberPemenuhan> SumberPemenuhanItems = new List<SumberPemenuhan>();


    private async Task HandleFormSubmission(SumberPemenuhan formData)
    {
        mySieveModel.Filters = "";
        if (ApplicationState.Id is null)
        {
            var result = await SumberPemenuhanService.CreateSumberPemenuhan(formData);
            if (result.ReasonPhrase == "OK")
            {
                JSRuntime.InvokeVoidAsync("clickElementById", "closeButtonSumberPemenuhan");
                //await LoadSumberPemenuhan(mySieveModel);
            }
        }
        else
        {
            var result = await SumberPemenuhanService.UpdateSumberPemenuhan(ApplicationState.Id, formData);
            if (result.ReasonPhrase == "OK")
            {
                JSRuntime.InvokeVoidAsync("clickElementById", "closeButtonSumberPemenuhan");
            }
        }
        await LoadSumberPemenuhan(mySieveModel);
        StateHasChanged();
    }

    private async void HandleDeleteSumberPemenuhan(string id)
    {
        Console.WriteLine($"Deletteee option clicked for item with value: {id}");
        var result = await Swal.FireAsync(new SweetAlertOptions
            {
                Title = "Are you sure to delete this item?",
                ShowCancelButton = true,
                ConfirmButtonText = "Yes!",
                Icon = "warning",
            });
        var confirm = !string.IsNullOrEmpty(result.Value);

        if (confirm)
        {
            await SumberPemenuhanService.DeleteSumberPemenuhan(id);
            await LoadSumberPemenuhan(mySieveModel);
            StateHasChanged();
        }
    }

    private async Task Next()
    {
        mySieveModel.Page++; // Increment the page
        await LoadSumberPemenuhan(mySieveModel); // Call LoadSumberPemenuhan with the updated page
    }
    private async Task Previous()
    {
        mySieveModel.Page--;
        await LoadSumberPemenuhan(mySieveModel);
    }

    private async Task HandlePageSizeChange(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value.ToString(), out int selectedPageSize))
        {
            mySieveModel.Page = 1;
            mySieveModel.PageSize = selectedPageSize;
            await LoadSumberPemenuhan(mySieveModel);
        }
    }
    protected override async Task OnInitializedAsync()
    {
        await LoadSumberPemenuhan(mySieveModel);
    }


    private async Task LoadSumberPemenuhan(SieveModel sieveModel)
    {
        try
        {
            await SumberPemenuhanService.LoadSumberPemenuhan(sieveModel);

            SumberPemenuhanItems = SumberPemenuhanService.SumberPemenuhans.Items;

            table.Data = new List<List<object>>();

            foreach (var item in SumberPemenuhanItems)
            {
                var rowData = new List<object>
{
item.Id.ToString(),
item.Id.ToString(),
item.Name,
};

                table.Data.Add(rowData);
            }

            table.Headers = new List<string>
{
"ID",
"Name"
};
        }
        catch (Exception ex)
        {
            // Log the exception
            Console.WriteLine(ex);
            // Handle the exception as needed (e.g., show an error message to the user)
        }
        finally
        {
        }
    }

}
